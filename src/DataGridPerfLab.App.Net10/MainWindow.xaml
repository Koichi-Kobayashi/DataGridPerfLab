<Window
    x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DataGridPerfLab"
    Width="1350"
    Height="820">
    <DockPanel>
        <Border Padding="10" DockPanel.Dock="Top">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Row 0: actions  -->
                <StackPanel
                    Grid.Row="0"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="150"
                        Margin="0,0,10,0"
                        Click="OnRebuild"
                        Content="10万件を再生成" />
                    <Button
                        Width="220"
                        Margin="0,0,10,0"
                        Click="OnApplyView"
                        Content="フィルター / ソート / グループ適用" />
                    <Button
                        Width="220"
                        Margin="0,0,10,0"
                        Click="OnMutateScores"
                        Content="スコアを変更 (5,000件)" />
                    <TextBlock
                        x:Name="StatusText"
                        VerticalAlignment="Center"
                        Text="Ready" />
                </StackPanel>

                <!--  Row 1: generation + performance options  -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="24" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="24" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Group: data build  -->
                    <GroupBox
                        Grid.Column="0"
                        Margin="0,0,0,0"
                        Padding="10"
                        Header="データ生成">
                        <StackPanel>
                            <CheckBox
                                x:Name="BatchToggle"
                                Margin="0,0,0,8"
                                Content="ItemsSource をまとめて差し替え（高速）"
                                IsChecked="True" />

                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,6,0"
                                    VerticalAlignment="Center"
                                    Text="生成方式：" />
                                <ComboBox
                                    x:Name="BuildModeCombo"
                                    Width="220"
                                    SelectedIndex="0">
                                    <ComboBoxItem Content="逐次 (Sequential)" />
                                    <ComboBoxItem Content="並列 (ConcurrentBag)" />
                                    <ComboBoxItem Content="並列 (Array)" />
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!--  Group: view conditions  -->
                    <GroupBox
                        Grid.Column="2"
                        Padding="10"
                        Header="View 条件">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,6"
                                Foreground="Gray"
                                Text="※ DeferRefresh は View（Filter / Sort / Group）の変更をまとめるための仕組みです。" />
                            <CheckBox
                                x:Name="UseDeferRefreshToggle"
                                Margin="0,0,0,8"
                                Content="Use DeferRefresh（View変更の一括反映）"
                                IsChecked="True" />

                            <CheckBox
                                x:Name="FilterEvenToggle"
                                Margin="0,0,0,4"
                                Content="フィルター：ID が偶数のみ"
                                IsChecked="False" />

                            <CheckBox
                                x:Name="FilterScoreToggle"
                                Margin="0,0,0,8"
                                Content="フィルター：Score が 50 以上"
                                IsChecked="False" />

                            <CheckBox
                                x:Name="SortIdDescToggle"
                                Margin="0,0,0,4"
                                Content="ソート：ID 降順"
                                IsChecked="False" />

                            <CheckBox
                                x:Name="SortScoreDescToggle"
                                Margin="0,0,0,8"
                                Content="ソート：Score 降順"
                                IsChecked="False" />

                            <CheckBox
                                x:Name="GroupByCategoryToggle"
                                Margin="0,0,0,8"
                                Content="グループ：Score / 10"
                                IsChecked="False" />

                            <CheckBox
                                x:Name="LiveShapingToggle"
                                Margin="0,0,0,0"
                                Content="Enable LiveShaping（値変更に追従）"
                                IsChecked="True" />
                        </StackPanel>
                    </GroupBox>

                    <!--  Group: DataGrid options  -->
                    <GroupBox
                        Grid.Column="4"
                        Padding="10"
                        Header="DataGrid 表示">
                        <StackPanel>
                            <CheckBox
                                x:Name="VirtualizationToggle"
                                Margin="0,0,0,0"
                                Checked="OnVirtualizationChanged"
                                Content="仮想化（行・列）"
                                IsChecked="True"
                                Unchecked="OnVirtualizationChanged" />
                        </StackPanel>
                    </GroupBox>
                </Grid>

                <!--  Row 2: spacer/info  -->
                <TextBlock
                    Grid.Row="2"
                    Margin="0,8,0,0"
                    Foreground="Gray"
                    Text="Tip: まずは『仮想化 OFF』で最悪ケースを見てから、ON に戻すと差が体感しやすいです。" />
            </Grid>
        </Border>

        <DataGrid
            x:Name="Grid"
            AutoGenerateColumns="True"
            EnableColumnVirtualization="True"
            EnableRowVirtualization="True"
            IsReadOnly="True"
            ItemsSource="{Binding Items}"
            ScrollViewer.CanContentScroll="True"
            VirtualizingPanel.IsVirtualizing="True"
            VirtualizingPanel.VirtualizationMode="Recycling" />
    </DockPanel>
</Window>
