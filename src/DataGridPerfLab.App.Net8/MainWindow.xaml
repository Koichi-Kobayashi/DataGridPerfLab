<Window
    x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DataGridPerfLab"
    Width="1350"
    Height="800">
    <DockPanel>
        <Border Padding="10" DockPanel.Dock="Top">
            <StackPanel Orientation="Vertical">
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Width="150"
                        Margin="0,0,10,0"
                        Click="OnRebuild"
                        Content="10万件を再生成" />
                    <Button
                        Width="220"
                        Margin="0,0,10,0"
                        Click="OnApplyView"
                        Content="フィルター / ソート / グループ適用" />
                    <Button
                        Width="220"
                        Margin="0,0,10,0"
                        Click="OnMutateScores"
                        Content="スコアを変更 (5,000件)" />
                    <TextBlock
                        x:Name="StatusText"
                        VerticalAlignment="Center"
                        Text="Ready" />
                </StackPanel>

                <WrapPanel Margin="0,10,0,0" VerticalAlignment="Center">
                    <CheckBox
                        x:Name="BatchToggle"
                        Margin="0,0,18,0"
                        Content="ItemsSource をまとめて差し替え（高速）"
                        IsChecked="True" />


                    <StackPanel
                        Margin="0,0,18,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,6,0"
                            VerticalAlignment="Center"
                            Text="生成方式：" />
                        <ComboBox
                            x:Name="BuildModeCombo"
                            Width="220"
                            SelectedIndex="0">
                            <ComboBoxItem Content="逐次 (Sequential)" />
                            <ComboBoxItem Content="並列 (ConcurrentBag)" />
                            <ComboBoxItem Content="並列 (Array)" />
                        </ComboBox>
                    </StackPanel>

                    <Separator Width="10" />

                    <CheckBox
                        x:Name="FilterEvenToggle"
                        Margin="0,0,18,0"
                        Content="フィルター：ID が偶数のみ"
                        IsChecked="False" />

                    <CheckBox
                        x:Name="FilterScoreToggle"
                        Margin="0,0,18,0"
                        Content="フィルター：Score が 50 以上"
                        IsChecked="False" />

                    <Separator Width="10" />

                    <CheckBox
                        x:Name="SortIdDescToggle"
                        Margin="0,0,18,0"
                        Content="ソート：ID 降順"
                        IsChecked="False" />

                    <CheckBox
                        x:Name="SortScoreDescToggle"
                        Margin="0,0,18,0"
                        Content="ソート：Score 降順"
                        IsChecked="False" />

                    <Separator Width="10" />

                    <CheckBox
                        x:Name="GroupByCategoryToggle"
                        Margin="0,0,18,0"
                        Content="グループ：Score / 10"
                        IsChecked="False" />

                    <Separator Width="10" />

                    <CheckBox
                        x:Name="UseDeferRefreshToggle"
                        Margin="0,0,18,0"
                        Content="Use DeferRefresh（View変更の一括反映）"
                        IsChecked="True" />

                    <CheckBox
                        x:Name="LiveShapingToggle"
                        Margin="0,0,18,0"
                        Content="Enable LiveShaping（値変更に追従）"
                        IsChecked="True" />

                    <Separator Width="10" />

                    <CheckBox
                        x:Name="VirtualizationToggle"
                        Margin="0,0,18,0"
                        Checked="OnVirtualizationChanged"
                        Content="仮想化（行・列）"
                        IsChecked="True"
                        Unchecked="OnVirtualizationChanged" />
                </WrapPanel>

                <TextBlock
                    Margin="0,6,0,0"
                    Foreground="Gray"
                    Text="※ DeferRefresh は View（Filter / Sort / Group）の変更をまとめるための仕組みです。LiveShaping はプロパティ変更に応じて自動で再評価されます。" />
            </StackPanel>
        </Border>

        <DataGrid
            x:Name="Grid"
            AutoGenerateColumns="True"
            EnableColumnVirtualization="True"
            EnableRowVirtualization="True"
            IsReadOnly="True"
            ItemsSource="{Binding Items}"
            ScrollViewer.CanContentScroll="True"
            VirtualizingPanel.IsVirtualizing="True"
            VirtualizingPanel.VirtualizationMode="Recycling" />
    </DockPanel>
</Window>
